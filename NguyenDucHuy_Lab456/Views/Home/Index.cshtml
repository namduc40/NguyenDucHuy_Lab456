@model IEnumerable<NguyenDucHuy_Lab456.Models.Course>
@{
    ViewBag.Title = "Trang Chủ";
}
<div class="row">
    <ul class="course">
        @foreach ( var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.Datetime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.Datetime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecturer">
                        @course.Lecturer.Name
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
            </li>
        }
    </ul>
</div>

